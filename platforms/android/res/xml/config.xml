<?xml version='1.0' encoding='utf-8'?>
<widget id="com.adanferguson.puzzlo" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="WebViewDebug">
        <param name="android-package" value="com.jamiestarke.webviewdebug.WebViewDebug" />
        <param name="onload" value="true" />
    </feature>
    <splash density="land-hdpi" src="splash.png" />
    <splash density="land-ldpi" src="splash.png" />
    <splash density="land-mdpi" src="splash.png" />
    <splash density="land-xhdpi" src="splash.png" />
    <splash density="port-hdpi" src="splash.png" />
    <splash density="port-ldpi" src="splash.png" />
    <splash density="port-mdpi" src="splash.png" />
    <splash density="port-xhdpi" src="splash.png" />
    <name>Puzzlo</name>
    <description>
		Way cool puzzle game where you destroy all of the diamonds using as few shots as possible. Can you beat all 80 levels? I doubt it.
    </description>
    <author email="adanferguson@gmail.com" href="http://www.adanferguson.com">
        Adan Ferguson
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="icon.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="1000" />
</widget>
